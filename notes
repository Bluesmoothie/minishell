<readline/readline.h>

readline			creer la ligne de shell et recup l'input sans \n

<readline/history.h>

rl_clear_history	vide l'historique de readline
rl_on_new_line		indique que l'on est sur une nouvelle ligne pour l'historique
rl_replace_line		modifie la ligne courante dans l'historique
rl_redisplay		affiche l'historique a la place de la ligne actuelle
add_history			ajoute une ligne a l'historique

<unistd.h>

access				Détermine si le processus appelant a les droits d'accès spécifiés sur le fichier ou le répertoire indiqué
					Vérifie l'existence du fichier et les attributs spécifiés par le paramètre mode
fork				execute un processus fils
getcwd				obtenir le chemin du répertoire de travail actuel
chdir				Changer le répertoire de travail actuel
unlink				supprime un fichier ou un lien symbolique
dup					Crée une copie du descripteur de fichier spécifié
dup2				remonter un descripteur de fichier vers un autre descripteur de fichier
pipe				crée deux fd un pour lire et un pour ecrire
isatty				indique si le descripteur de fichier est un terminal
ttyname				obtenir le chemin du terminal associé à un descripteur de fichier
ttyslot				obtenir le numéro de l'entrée dans la table des terminaux

<sys/stat.h>

stat				obtenir les informations sur un fichier
lstat				obtenir les informations sur un fichier sans suivre les liens symboliques
fstat				obtenir les informations sur un fichier à partir d'un descripteur de fichier
execve				exécute un programme

<sys/wait.h>

wait				suspend l'exécution du processus appelant jusqu'à ce qu'un de ses processus fils se termine
waitpid				suspend l'exécution du processus appelant jusqu'à ce que l'un de ses processus fils se termine
wait3				attendre qu'un processus enfant change d'état et obtenir des informations sur ce changement
wait4				attendre qu'un processus enfant change d'état et obtenir des informations sur ce changement

<dirent.h>

opendir				renvoi un pointeur sur une structure DIR
readdir				renvoi un pointeur la structure suivante
closedir			ferme le pointeur sur la structure DIR


getenv				obtenir la valeur d'une variable d'environnement
ioctl				manipuler les paramètres de périphériques

<termios.h>

tcgetattr			obtenir les paramètres du terminal
tcsetattr			définir les paramètres du terminal

<curses.h> <term.h>

tgetent				obtenir les informations sur le terminal
tgetflag			vérifie si le terminal a un flag
tgetnum				obtenir la valeur int d'un flag
tgetstr				obtenir une chaine d'un flag
tgoto				?
tputs				?